<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e4"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shortcuts"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="40sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:background="#4CAF50"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:src="@drawable/issues" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="#3F51B5"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:src="@drawable/pull_request" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/purple_500"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:src="@drawable/discussion" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="#FF9800"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:src="@drawable/organization" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="#8A93A6"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:src="@drawable/project" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="#393636"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:src="@drawable/energy" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"
                android:background="#CAB819"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:src="@drawable/star" />


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="The things you need, one top away"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="Fact access to your lists of Issues, Pull Requests, or Discussion"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/favorites_text1"
            android:layout_marginLeft="45sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="45sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/shape_retangular"
            android:gravity="center"
            android:padding="10sp"
            android:text="Get Started"
            android:textColor="@color/color_selected"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="40sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp"/>
    <TextView
        android:background="@drawable/shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Issues and Pull Requests that you've\n interacted with recently will appear here."
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginBottom="15sp"
        android:gravity="center"
        android:padding="10sp"
        />



</LinearLayout>