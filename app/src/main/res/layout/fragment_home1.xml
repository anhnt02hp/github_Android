<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shortcuts"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="40sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:src="@drawable/btn_6" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:src="@drawable/btn_7" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:src="@drawable/btn_8" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:src="@drawable/btn_9" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:src="@drawable/btn_10" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:src="@drawable/btn_11" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:src="@drawable/btn_12" />


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="The things you need, one top away"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="Fact access to your lists of Issues, Pull Requests, or Discussion"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/favorites_text1"
            android:background="@drawable/shape"
            android:layout_marginLeft="45sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="45sp"
            android:layout_marginBottom="10sp"
            android:gravity="center"
            android:padding="10sp"
            android:text="Get Started"
            android:textColor="@color/color_selected"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="40sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp"/>
    <TextView
        android:background="@drawable/shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Issues and Pull Requests that you've\n interacted with recently will appear here."
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginBottom="15sp"
        android:gravity="center"
        android:padding="10sp"
        />



</LinearLayout>